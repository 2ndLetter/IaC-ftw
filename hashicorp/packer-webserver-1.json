{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-1",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "subnet_id": "{{user `aws_subnet_id`}}",
            "security_group_id": "{{user `aws_security_group`}}",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 50
                },
                {
                    "device_name": "/dev/sda2",
                    "volume_size": 50
                }
            ],
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "CentOS 7.9*",
                    "architecture": "x86_64",
                    "root-device-type": "ebs"
                },
                "owners": ["125523088429"],
                "most_recent": true
            },
            "instance_type": "t2.micro",
            "ssh_username": "centos",
            "ami_name": "proving_grounds_{{timestamp}}",
            "force_deregister": "true",
            "force_delete_snapshot": "true"
        }
    ],
    "provisioners": [
            {
                "type": "shell",
                "scripts": [
                    "scripts/yum_update.sh",
                    "scripts/install_software.sh",
                    "scripts/check-website.sh",
                    "scripts/ebs.sh",
                    "scripts/disable_selinux.sh"
                ]
            },
            {
                "type": "puppet-masterless",
                "manifest_file": "puppet/chronyd.pp"
            },
            {
                "type": "puppet-masterless",
                "manifest_file": "puppet/ntpinstall.pp"
            },
            {
                "type": "puppet-masterless",
                "manifest_file": "puppet/ntpstart.pp"
            },
            {
                "type": "shell",
                "scripts": [
                    "scripts/misc.sh"
                ]
            }
    ]
}
